@model Multiflex.Frontend.WebApp.Models.SupplierDto
@*@model Multiflex.Frontend.WebApp.Models.SupplierMaterial*@

@{
    ViewData["Title"] = "Add";
}


<p class="text-center">F&uuml;ge einen neuen Lieferanten Hinzu</p>
<div class="row w-100 d-flex justify-content-center">

@*<div class="row w-50">*@
    <div class="col-md-4 ">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="link" class="control-label"></label>
                <input asp-for="link" class="form-control" />
                <span asp-validation-for="link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="deliveryTime" class="control-label"></label>
                <input asp-for="deliveryTime" class="form-control" />
                <span asp-validation-for="deliveryTime" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                 <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
