@model Multiflex.Frontend.WebApp.Models.LieferantDto

@{
    ViewData["Title"] = "Add";
}

<p class="text-center">Füge einen neuen Lieferanten Hinzu</p>

<div class="row d-flex justify-content-center w-50">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weblink" class="control-label"></label>
                <input asp-for="weblink" class="form-control" />
                <span asp-validation-for="weblink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lieferzeit" class="control-label"></label>
                <input asp-for="lieferzeit" class="form-control" />
                <span asp-validation-for="lieferzeit" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                 <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}