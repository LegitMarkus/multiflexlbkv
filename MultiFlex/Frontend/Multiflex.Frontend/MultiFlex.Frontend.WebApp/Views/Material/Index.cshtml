@model IEnumerable<Multiflex.Frontend.WebApp.Models.LieferantMaterial>

@{
    ViewData["Title"] = "Lieferanten inkl. Ware";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <center>
        <div class="w-75" id="table_div"></div>
        <a asp-action="Add" id="open-add-window" type="submit" class="btn btn-primary">Erstellen</a>
    </center>

    <div class="d-flex justify-content-center pt-3 pb-2">
        <table class="table w-75">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Material</th>
                    <th scope="col">Lieferant</th>
                    <th scope="col">Weblnk</th>
                    <th scope="col">Lieferzeit</th>
                    <th scope="col">L&ouml;schen</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.ware_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lieferat_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.weblink)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lieferzeit)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new {  id=item.id  })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



