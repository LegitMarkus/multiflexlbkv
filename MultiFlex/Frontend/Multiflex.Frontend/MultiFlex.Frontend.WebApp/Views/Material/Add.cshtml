@{
    ViewData["Title"] = "Add";
}


<p class="text-center">Füge einen neues Material für Lieferanten Hinzu</p>

<div class="d-flex justify-content-center w-100">


    <div class="w-75">
        <form>
            <center>
                <div class="mb-5">
                    <label class="form-label">LieferantenName</label>
                    <input type="text" class="form-control w-50 d-flex justify-content-center" id="lieferatenNameInput" placeholder="LieferantenName" required>
                </div>

                <div class="mt-5 mb-3">
                    <label class="form-label">Material</label>
                    <input type="text" class="form-control w-50 d-flex justify-content-center" id="materialImput" placeholder="Material" required>
                </div>
                <div class="mt-5 mb-3">
                    <label class="form-label">WebLink</label>
                    <input type="text" class="form-control w-50 d-flex justify-content-center" id="webLinqImput" placeholder="WebLink" required>
                </div>
                <div class="mt-5 mb-3">
                    <label class="form-label">Lieferzeit</label>
                    <input type="text" class="form-control w-50 d-flex justify-content-center" id="lieferzeitImput" placeholder="Lieferzeit" required>
                </div>

                <button id="add-lieferanten" type="submit" class="btn btn-primary">Erstellen</button>
            </center>
        </form>
    </div>

</div>
