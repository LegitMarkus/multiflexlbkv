<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Multiflex.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Multiflex.WebApp.styles.css" asp-append-version="true" />
    <script src="../contrast-bootstrap-pro/js/cdb.js"></script>
            <script src="../contrast-bootstrap-pro/js/bootstrap.min.js"></script>
            <script src="https://kit.fontawesome.com/9d1d9a82d2.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="../Home/Index">Übersicht</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="../Home//Privacy">Bestand</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="../Home/Privacy">Komisionierung</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="../Home/Privacy">Bestellung/Versand</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="../Lieferanten/Index">Lieferanten</a>
                            </li>
                        </ul>
                        <li class="navbar-nav nav-item">
                            <a class="nav-link text-dark" href="../Home/Privacy">Log out</a>
                        </li>
                </div>
            </div>
        </nav>
    </header>
    <div class="w-100">
        <main role="main" class="pb-3 w-100">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        const { ipcRenderer } = require("electron");
        document.addEventListener('DOMContentLoaded', pageLoaded);

        function pageLoaded(){
            ipcRenderer.send('loadFinished');
        }

        document.getElementById("myInput").oninput = function() {changeInput()};

        ipcRenderer.on('getRegal-reply', (event, arg1, arg2, arg3) => {
            let regal = JSON.parse(arg1);
            let ware = JSON.parse(arg2);
            let fach = JSON.parse(arg3);
            google.charts.load('current', {'packages':['corechart']});
            google.charts.setOnLoadCallback(drawVisualization);

            function drawVisualization() {
               for (var i = 0; i < regal.length; i++){
                   var fächer = [['Name', 'Max-Bestand', 'Min-Bestand', 'Bestand']];
                   for (var j = 0; j < ware.length; j++) {
                       for(var k = 0; k < fach.length; k++) {
                           for(var l = 0; l < ware[j]["fach_ids"].length; l++){
                                   if(ware[j]["fach_ids"][l] == fach[k]["id"] && regal[i]["id"] == fach[k]["regal_id"]){
                                       var data = [ware[j]["name"], ware[j]["maxbestand"], ware[j]["minbestand"], ware[j]["bestand"]];
                                       fächer.push(data);
                               }
                           }
                           
                       }
                   }
                   var dataResult = google.visualization.arrayToDataTable(fächer);

            

                   var options = {
                     title : regal[i]["name"],
                     vAxis: {title: regal[i]["id"]},
                     //hAxis: {title: 'Bestand'},
                     seriesType: 'bars',
                     series: {
                       0:{color: 'green', visibleInLegend: true, type: 'line'},
                       1:{color: 'red', visibleInLegend: true, type: 'line'},
                       2:{color: 'orange', visibleInLegend: true}
                     }
                   };
                  
                   document.getElementById('regale').innerHTML += '<div class=" mt-2 mr-2 mb-2 ml-2" style="width: 48%"> <div class="card w-100" id="regale"> <div class="w-100" id="chart_div' + i + '" style="height: 400px;"> </div> </div> </div> ';
                   var chart = new google.visualization.ComboChart(document.getElementById('chart_div'+i));
                   chart.draw(dataResult, options);
               }
            }
        });


        function changeInput() {
            document.getElementById('regale').innerHTML = '';
            var input = document.getElementById("myInput");
            ipcRenderer.send('searchRegal', input.value);
        }

        ipcRenderer.on('getSearchedRegal-reply', (event, arg1, arg2, arg3) => {
        
            let regal = JSON.parse(arg1);
            let ware = JSON.parse(arg2);
            let fach = JSON.parse(arg3);

            google.charts.load('current', {'packages':['corechart']});
            google.charts.setOnLoadCallback(drawVisualization);

            function drawVisualization() {
               for (var i = 0; i < regal.length; i++){
                   var fächer = [['Name', 'Max-Bestand', 'Min-Bestand', 'Bestand']];
                   for (var j = 0; j < ware.length; j++) {
                       for(var k = 0; k < fach.length; k++) {
                           for(var l = 0; l < ware[j]["fach_ids"].length; l++){
                               if(ware[j]["fach_ids"][l] != 0 && fach[k]["id"] != 0 && regal[i]["id"] != 0 && fach[k]["regal_id"]){
                                   if(ware[j]["fach_ids"][l] == fach[k]["id"] && regal[i]["id"] == fach[k]["regal_id"]){
                                       var data = [ware[j]["name"], ware[j]["maxbestand"], ware[j]["minbestand"], ware[j]["bestand"]];
                                       fächer.push(data);
                                       }
                               }
                           }
                           
                       }
                   }

                   var dataResult = google.visualization.arrayToDataTable(fächer);

                   var options = {
                     title : regal[i]["name"],
                     vAxis: {title: regal[i]["id"]},
                     //hAxis: {title: 'Bestand'},
                     seriesType: 'bars',
                     series: {
                       0:{color: 'green', visibleInLegend: true, type: 'line'},
                       1:{color: 'red', visibleInLegend: true, type: 'line'},
                       2:{color: 'orange', visibleInLegend: true}
                     }
                   };
                  
                   //neues item für eine chart wird erstellt
                   document.getElementById('regale').innerHTML += '<div class=" mt-2 mr-2 mb-2 ml-2" style="width: 48%"> <div class="card w-100" id="regale"> <div class="w-100" id="chart_div' + i + '" style="height: 400px;"> </div> </div> </div> ';
                   //hier wird jeweils das chart für das oben erstellte item hinzugefügt
                   var chart = new google.visualization.ComboChart(document.getElementById('chart_div'+i));
                   //hier wird dan das chart erstellt/"gezeichnet"
                   chart.draw(dataResult, options);
               }
            }
        });

        document.getElementById("open-add-window").addEventListener("click", () => {
            ipcRenderer.send("open-add-window");
        });

    </script>

   @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
