@model IEnumerable<Frontend.Logic.Entities.Orders.RootOrderItem>
@{
    if (Model.Count() == 0)
    {
        <p class="text-center">Keine offene Bestellung vorhanden</p>
    }
    else
        @await Html.PartialAsync("_LoginMenu")
    {
        foreach (var item in Model)
        {
            foreach (var item2 in item.OrderItems)
            {
                <li class="list-group-item d-flex justify-content-between pt-4">
                    <p>Produkt: @item2.Product.SKU</p>
                    <p>Land: @item.ShippingAddress.Country</p>
                </li>
            }
        }
    }
}
